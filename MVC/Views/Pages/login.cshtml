@model networkProj.Models.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 
    ViewBag.Title = "Login";
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript" language="javascript">
                alert('@ViewBag.Message');
    </script>
}

@using (Html.BeginForm("ifRegisterd", "Pages", FormMethod.Post))
{
    <fieldset style="width:300px">
        <legend>Login</legend>
        <table>
            <tr>
                <td>@Html.Label("Enter User Name")</td>
            </tr>
            <tr>
                <td>@Html.TextBoxFor(a=>a.usrName)</td>
            </tr>
            <tr>
                <td>@Html.Label("Enter Password")</td>
            </tr>
            <tr>
                <td>@Html.TextBoxFor(a => a.password)</td>
            </tr>
            <tr>
                <td><input type="submit" id="submitbtn" value="Login" /></td>
            </tr>
        </table>
    </fieldset>
}

